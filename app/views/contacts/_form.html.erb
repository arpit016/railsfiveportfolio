<div class="card card-login card-plain contact-form">
    <%= form_for(contact, html:{class: 'form'}) do |f| %>
        <div class="container">
          <div class="row">
            <div class="col-md-12 col-sm-12">                      
              <div class="contact-icons">
                <a class="follow-link" rel="tooltip" title="Follow me on Facebook" data-placement="bottom" href="https://www.facebook.com/arpit160" target="_blank">
                    <i class="fa fa-facebook-square fa-2x"></i>
                </a>
                <a class="follow-link" rel="tooltip" title="Follow me on Github" data-placement="bottom" href="https://github.com/arpit016" target="_blank">
                    <i class="fa fa-github fa-2x"></i>
                </a>
                <a class="follow-link" rel="tooltip" title="Follow me on StackOverflow" data-placement="bottom" href="https://stackoverflow.com/users/4885251/arpit-agarwal" target="_blank">
                    <i class="fa fa-stack-overflow fa-2x"></i>
                </a>
                <a class="follow-link" rel="tooltip" title="Follow me on Google+" data-placement="bottom" href="https://plus.google.com/u/0/+ArpitAgarwal016" target="_blank">
                    <i class="fa fa-google-plus fa-2x"></i>
                </a>
              </div>
            </div>
          </div>
        </div>
        <div class="header header-primary text-center">
            <h4 class="title contact-header"> SAY HELLO! </h4>
        </div>
        <div class="content">
            <div class="input-group form-group-no-border input-lg">
                <span class="input-group-addon">
                    <i class="now-ui-icons users_circle-08"></i>
                </span>
                <%= f.text_field :name, class: "form-control", placeholder: "Name", required: true %>
            </div>
            <div class="input-group form-group-no-border input-lg">
                <span class="input-group-addon">
                    <i class="now-ui-icons ui-1_email-85"></i>
                </span>
                <%= f.email_field :email, class: "form-control", placeholder: "Email", required: true %>
            </div>
            <div class="input-group form-group-no-border input-lg">
                <%= f.text_area :message, autocomplete: "off", class: "form-control", placeholder: "Your Message" , :rows => "5",required: true %>
            </div>
            <div class="input-group form-group-no-border input-lg hidden-xl-down hidden-xs-up">
                <%= f.text_field :nickname, class: "form-control", placeholder: "nickname" , :hint => 'Leave this field blank!'%>
            </div>
        </div>
        <div class="footer text-center actions">
            <%= button_tag(type: "submit", class:"btn btn-primary btn-round btn-lg btn-block") do %>
               <i class="fa fa-paper-plane" aria-hidden="true"></i> Send Message
            <% end %>
        </div>
    <% end %>
</div>