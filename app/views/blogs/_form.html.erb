<div class= "container">
  <div class="row">
    <div class="col-md-12">
    <div class="card form-signup" data-background-color="orange">
        <%= form_for(@blog, html: {class: "form" }) do |f| %>
          
          <div class="header header-primary text-center">
              <h4 class="title title-up"><%= "#{action_name}" %> Project</h4>
          </div>
          <div class="content">
            <div class="row">
              <div class="col-md-12">
                <div class="input-group form-group-no-border">       
                  <%= f.text_field :title, :class => 'form-control', :placeholder => 'Title', autofocus: true %>
                </div>
              
                <div class="input-group form-group-no-border">        
                  <%= f.text_field :title, :class => 'form-control blog-space', :placeholder => 'Category' %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class= "col-md-12">
                <div class="text-center">
                    <h5 class="title title-up blog-space">Image Upload: </h4>
                </div>
              </div>
              <div class="col-md-6">
                <div class="text-center" style="margin: 5px;">
                    <button class="btn btn-simple btn-lg btn-round blog-space">Display Image</button>
                </div>
              </div>
              <div class="col-md-6">
                <div class="text-center" style="margin: 5px;">
                    <button class="btn btn-simple btn-lg btn-round blog-space">Thumb Image</button>
                </div>
              </div>
            </div>
            <div class = "row">
              <div class="col-md-12">
                <div class="input-group form-group-no-border">        
                  <%= f.text_area :body, :class => 'form-control blog-description', :placeholder => 'Description', :rows => "10" %>
                </div>
              </div>
            </div>
          </div>
          <div class="footer text-center">
              <%= f.submit class: "btn btn-neutral btn-round btn-lg" %>
          </div>
        <% end %>
      </div>
      </div>
    </div>
  </div>